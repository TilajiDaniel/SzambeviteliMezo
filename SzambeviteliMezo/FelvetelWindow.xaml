<Window x:Class="PetsHotel.FelvetelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetsHotel"
        mc:Ignorable="d"
        Title="Új kedvenc felvétele" Height="500" Width="400">
    <StackPanel>
        <!--Név;Faj;Fajta;Nem;Szín;SzületésiDátum;Súly;KedvencÉtel;KedvencJáték-->
        <Label Content="Név *"/>
        <TextBox x:Name="tbxNev"/>
        <Label Content="Faj *"/>
        <TextBox x:Name="tbxFaj"/>
        <Label Content="Fajta *"/>
        <TextBox x:Name="tbxFajta"/>
        <Label Content="Nem *"/>
        <TextBox x:Name="tbxNem"/>
        <Label Content="Szín *"/>
        <TextBox x:Name="tbxSzin"/>
        <Label Content="Születi dátum *"/>
        <DatePicker Name="dpSzulDatum"/>
        <Label Content="Súly *"/>
        <TextBox x:Name="tbxSuly"/>
        <Label Content="Kedvenc étel"/>
        <TextBox x:Name="tbxEtel"/>
        <Label Content="Kedvenc játék"/>
        <TextBox x:Name="tbxJatek"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Felvétel"
                    Click="Felvetel_Click"/>
            <Button Content="Mégse"
                    Click="Megse_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
