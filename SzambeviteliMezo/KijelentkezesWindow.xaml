<Window x:Class="PetsHotel.KijelentkezesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetsHotel"
        mc:Ignorable="d"
        Title="Kijelentkezés" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TextBlock Text="Biztosan ki szeretnél jelentkezni?" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="14" 
                   Margin="0,10,0,0" />
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,0,10" 
                    Spacing="10">
            <Button Name="btnIgen" Content="Igen" Width="75" Click="btnIgen_Click"/>
            <Button Name="btnMegse" Content="Mégse" Width="75" Click="btnMegse_Click"/>
        </StackPanel>
    </Grid>
</Window>